{
	"name": "viaz",
	"version": "0.1.5",
	"description": "",
	"scripts": {
		"build": "vite build",
		"release": "release-it"
	},
	"release-it": {
		"git": false,
		"plugins": {
			"@release-it/bumper": {
				"out": {
					"file": "package.json",
					"path": [
						"dependencies.@viaz/types",
						"dependencies.@viaz/utils",
						"dependencies.@viaz/directives",
						"dependencies.@viaz/hooks",
						"dependencies.@viaz/components",
						"dependencies.@viaz/constants"
					]
				}
			}
		}
	},
	"type": "module",
	"main": "dist/viaz.js",
	"module": "dist/viaz.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/viaz.umd.cjs",
			"module": "./dist/viaz.js"
		},
		"./*": "./*"
	},
	"files": [
		"dist",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@viaz/types": "workspace:*",
		"@viaz/utils": "workspace:*",
		"@viaz/directives": "workspace:*",
		"@viaz/hooks": "workspace:*",
		"@viaz/components": "workspace:*",
		"@viaz/constants": "workspace:*"
	},
	"peerDependencies": {
		"vue": ">=3.4.25",
		"sortablejs": "^1.15.2"
	},
	"keywords": [],
	"author": "",
	"license": "MIT"
}
