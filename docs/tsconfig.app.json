{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "../packages/**/*",
    "../packages/components/**/*.demo.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "viaz": ["../packages/viaz"],
      "viaz/index": ["../packages/viaz/index.ts"],
      "@viaz/*": ["../packages/*"],
      "@packages/components/*": [
        "../packages/components/*.demo.vue",
        "../packages/components/*.md"
      ]
    }
  }
}
